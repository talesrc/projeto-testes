doctype html
html
    head
        title Editar Categoria
        link(rel='stylesheet' href='/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/style.css')
    body
        header 
            h1 
                    a.home(href="/") LIVRARIA UEBITCHU

        div.loginput
            h2 EDITAR CATEGORIA

            form(method='POST', action=`/admin/category/update`)
                label Id:
                input.form-control(name='id', type='text', value=category.id, readonly, required)
                label Nome:
                input.form-control(name='name', type='text', value=category.name, required)
                br
                
                input.btn.btn-primary(type='submit',value='EDITAR')